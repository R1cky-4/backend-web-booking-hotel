<!-- Modal -->
<div
  class="modal fade"
  id="addData"
  tabindex="-1"
  aria-labelledby="addDataLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title" id="addDataLabel">Tambah Data</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true" class="text-white" >&times;</span>
        </button>
      </div>
      <form
        action="/admin/addItem"
        method="POST"
        autocomplete="off"
        enctype="multipart/form-data"
      >
        <div class="modal-body">
          <div class="row">
            <div class="form-group col-4">
              <label for="category">Kategori</label>
              <select
                required
                id="category"
                name="category"
                class="form-control"
              >
                <option selected disabled>-- Pilih Kategori --</option>
                <% category.forEach((val, i) => { %>
                <option value="<%= val.id %>"><%= val.name %></option>
                <% }) %>
              </select>
            </div>
            <div class="form-group col-4">
              <label for="title">Judul</label>
              <input
                required
                type="text"
                class="form-control"
                id="title"
                name="title"
              />
            </div>
            <div class="form-group col-4">
              <label for="price">Harga</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <div class="input-group-text">Rp</div>
                </div>
                <input
                  required
                  type="text"
                  class="form-control"
                  id="price-text"
                  name="price-text"
                  onkeypress="return onlyNumberKey(event)"
                />
                <input
                  hidden
                  required
                  type="number"
                  class="form-control"
                  id="price"
                  name="price"
                />
              </div>
            </div>
            <div class="form-group col-6">
              <label for="country">Negara</label>
              <input
                required
                type="text"
                class="form-control"
                id="country"
                name="country"
              />
            </div>
            <div class="form-group col-sm-6">
              <label for="city">Kota</label>
              <input
                required
                type="text"
                class="form-control"
                id="city"
                name="city"
              />
            </div>
            <div class="form-group col-12">
              <label for="gambar">Gambar Hotel</label>
              <div hidden class="row my-2" id="previewImage"></div>
              <input
                required
                accept="image/*"
                type="file"
                class="form-control"
                id="gambar"
                name="gambar"
                multiple
              />
            </div>
            <div class="form-group col-12">
              <label for="description">Deskripsi</label>
              <textarea
                required
                class="form-control"
                id="description"
                name="description"
                rows="10"
              ></textarea>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-success">Tambah</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Cek Editor -->
<script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
<script>
  CKEDITOR.replace("description");

  function onlyNumberKey(evt) {
    // Only ASCII character in that range allowed
    let ASCIICode = evt.which ? evt.which : evt.keyCode;
    if (evt.target.value.length <= 0) {
      if (ASCIICode > 31 && (ASCIICode <= 48 || ASCIICode > 57)) return false;
      return true;
    } else {
      if (ASCIICode > 31 && (ASCIICode < 48 || ASCIICode > 57)) return false;
      return true;
    }
  }
</script>
