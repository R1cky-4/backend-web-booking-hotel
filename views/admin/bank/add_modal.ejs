<!-- Modal -->
<div
  class="modal fade"
  id="addData"
  tabindex="-1"
  aria-labelledby="addDataLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addDataLabel">Tambah Data</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/admin/addBank" method="POST" enctype="multipart/form-data">
        <div class="modal-body">
          <div class="form-group">
            <label for="nameBank">Nama Bank</label>
            <input
              required
              type="text"
              class="form-control"
              id="nameBank"
              name="nameBank"
            />
          </div>
          <div class="form-group">
            <label for="noRekening">Nomor Rekening</label>
            <input
              required
              type="text"
              class="form-control"
              id="noRekening"
              name="noRekening"
              oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');"
            />
          </div>
          <div class="form-group">
            <label for="name">Nama Penerima</label>
            <input
              required
              type="text"
              class="form-control"
              id="name"
              name="name"
            />
          </div>
          <div class="form-group">
            <label for="gambar">Gambar</label>
            <input
              required
              accept="image/*"
              type="file"
              class="form-control"
              id="gambar"
              name="gambar"
            />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-success">Tambah</button>
        </div>
      </form>
    </div>
  </div>
</div>
