<%- layout('parts/layout') %> <% block('title', 'Halan Halan | Login') %>

<div
  class="container-fluid d-flex justify-content-center align-items-center"
  style="
    width: 100%;
    height: 100vh;
    background: linear-gradient(
      to right,
      #4e73df 0%,
      #4e73df 50%,
      white 50%,
      white 100%
    );
  "
>
  <div class="row m-0 p-0">
    <div
      class="col bg-white d-flex justify-content-center align-items-center shadow-lg"
      style="border-top-left-radius: 10px; border-bottom-left-radius: 10px"
    >
      <img
        src="/images/Login_Ilustration.png"
        class="img-fluid p-5"
        style="max-height: 1000px"
      />
    </div>
    <div
      class="col d-flex flex-column bg-primary justify-content-center align-items-center position-relative shadow-lg"
      style="border-top-right-radius: 10px; border-bottom-right-radius: 10px"
    >
      <% if(message != ""){ %>
      <div
        class="alert alert-<%= status %> alert-dismissible fade show"
        style="position: absolute; top: 6px; left: 6px; right: 6px"
        role="alert"
      >
        <strong><%= message %></strong>
        <button
          type="button"
          class="close"
          data-dismiss="alert"
          aria-label="Close"
        >
          <span aria-hidden="true" class="text-white">&times;</span>
        </button>
      </div>
      <% } %>
      <h1 class="text-white mb-5 text-left">Login_</h1>
      <form method="post" action="/admin/login">
        <div class="form-group">
          <label for="username" class="text-white">username :</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            placeholder="admin"
            required
          />
        </div>
        <div class="form-group">
          <label for="password" class="text-white">password :</label>
          <input
            type="password"
            class="form-control"
            id="password"
            placeholder="******"
            size="25"
            name="password"
            required
          />
        </div>
        <div class="form-check d-flex align-items-center">
          <input
            class="form-check-input"
            value="show_password"
            type="checkbox"
            id="show-password"
            size="25"
          />
          <label class="form-check-label" for="show-password">
            <span class="text-xs text-white">tampilkan password</span>
          </label>
        </div>
        <button class="btn btn-light text-primary mt-5" type="submit">
          Login
        </button>
      </form>
    </div>
  </div>
</div>

<script>
  var password = document.getElementById("password");
  $("#show-password").on("click", function () {
    if (password.type == "password") {
      password.type = "text";
      password.placeholder = "admin";
    } else {
      password.type = "password";
      password.placeholder = "*****";
    }
  });
</script>
